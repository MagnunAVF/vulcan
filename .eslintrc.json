{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": [
    "jsdoc"
  ],
  "extends": [
    "airbnb-base",
    "plugin:jsdoc/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          [
            "#root",
            "./"
          ],
          [
            "#lib",
            "./lib/"
          ],
          [
            "#errors",
            "./lib/errors/base.error.js"
          ]
        ],
        "extensions": [
          ".js",
          ".json"
        ]
      }
    }
  },
  "rules": {
    "no-console": "off",
    "import/extensions": [
      "error",
      "always"
    ]
  }
}